<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>API Manager</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h2 class="center">API Manager (CRUD via fetch)</h2>

    <form id="apiForm" class="grid-2">
      <input type="hidden" id="editId">
      <div class="form-control">
        <label>Name</label>
        <input id="apiName" type="text" required>
      </div>
      <div class="form-control">
        <label>Email</label>
        <input id="apiEmail" type="email" required>
      </div>
      <div class="form-control">
        <label>Age</label>
        <input id="apiAge" type="number" required>
      </div>
      <div class="form-control">
        <label>Message</label>
        <input id="apiMessage" type="text">
      </div>

      <div class="actions">
        <button class="btn" id="saveBtn" type="submit">Save</button>
        <button class="btn btn-muted" id="cancelEdit" type="button" style="display:none;">Cancel</button>
      </div>
    </form>

    <div class="table-wrap">
      <table class="table" id="apiTable">
        <thead>
          <tr>
            <th>#</th><th>Name</th><th>Email</th><th>Age</th><th>Message</th><th>Actions</th>
          </tr>
        </thead>
        <tbody id="tableBody">
        </tbody>
      </table>
    </div>

    <div class="actions center">
      <a class="btn" href="/">Home</a>
      <a class="btn btn-alt" href="/submission">Submissions</a>
    </div>
  </div>

  <script src="/api.js"></script>
</body>
</html>
